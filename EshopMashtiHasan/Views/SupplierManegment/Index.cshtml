@model List<Shopping.DomainModel.DTO.Supplier.SupplierListItem>

@{
    ViewData["Title"] = "Index";
}

<h2>Supplier Manegment</h2>

<p>
    <a asp-action="AddNew" asp-controller="SupplierManegment" class="btn btn-primary">Add New Supplier </a>
</p>
@if (Model == null || Model.Count == 0)
{
    <h4 class="text-danger ">    
        No Supplier
    </h4>
}
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                SupplierID
            </th>
            <th>
                SupplierName
            </th>
            <th>
               Grade
            </th>
            <th>
               Tel
            </th>
            <th>
               Product Count
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.SupplierID
            </td>
            <td>
                @item.SupplierName
            </td>
            <td>
                @item.Grade
            </td>
            <td>
                @item.Tel
            </td>
            <td>
                @item.ProductCount
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
