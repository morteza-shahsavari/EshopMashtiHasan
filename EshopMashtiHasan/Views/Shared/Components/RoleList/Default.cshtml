@model IEnumerable<Security.Domain.DTO.Role.RoleListItem>

@if (Model == null || Model.Count() == 0)
{
    <h4 class="text-danger text-center">
        No Role
    </h4>
}
else
{
    <table class="table table-striped table-hover table-striped mt-2">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                <tr id="tr_@item.RoleID">
            <td>
                @Html.DisplayFor(modelItem => item.RoleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCount)
            </td>
            <td>
                        <span class="btn btn-danger btnDelete" data-id="@item.RoleID" 
                        data-action='@Url.Action("RemoveRole","RoleManegment")'
                      data-action-BindGrid='@Url.Action("RoleListAction","RoleManegment")'
                      data-action-RefreshGrid='@Url.Action("RoleSearchBoxAction","RoleManegment")' 
                      data-Delete="Delete" >Delete</span>
            </td>
        </tr>
}
    </tbody>
</table>
}