@model Security.Domain.DTO.User.UserSearchModel

<h4>UserSearchModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Default" id="frmSearch">
           
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" data-action='@Url.Action("UserListAction", "UserManegment")' data-search="search" />
              
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" data-action='@Url.Action("UserListAction", "UserManegment")' data-search="search" />
              
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" data-action='@Url.Action("UserListAction", "UserManegment")' data-search="search" />
                
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" data-action='@Url.Action("UserListAction", "UserManegment")' data-search="search" />
               
            </div>
            <div class="form-group">
                <label asp-for="RoleID" class="control-label"></label>
                
                <select asp-for="RoleID" asp-items=@ViewBag.drpRole
                        class="form-control" data-action='@Url.Action("UserListAction", "UserManegment")' data-search="search"></select>
                
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
                <a href="#" class="btn btn-success mt-2" id="btnAddNew"
                   data-action='@Url.Action("AddNew","UserManegment")'
                   data-container="dvContent" data-modal-id="exampleModal" data-showAddModel="showAddModel">ثبت جدید</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
