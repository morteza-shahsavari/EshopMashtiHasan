@model IEnumerable<Security.Domain.DTO.ProjectAction.ProjectActionListItem>

@if (Model == null || Model.Count() == 0)
{
    <h4 class="text-danger text-center">
        No Action
    </h4>
}
else
{
<table class="table table-striped table-hover table-striped mt-2">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectActionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectActionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersianTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectControllerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr id="tr_@item.ProjectActionID">
            <td>
                @Html.DisplayFor(modelItem => item.ProjectActionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectActionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersianTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectControllerName)
            </td>
            <td>
                    <span class="btn btn-danger btnDelete" data-id="@item.ProjectActionID" data-action='@Url.Action("RemoveProjectAction","ProjectActionManegment")'
                      data-action-BindGrid='@Url.Action("ProjectActionListAction","ProjectActionManegment")'
                      data-action-RefreshGrid='@Url.Action("ProjectActionSearchBoxAction","ProjectActionManegment")' data-Delete="Delete" >Delete</span>

            </td>
        </tr>
}
    </tbody>
</table>
}