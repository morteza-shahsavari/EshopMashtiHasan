@model IEnumerable<Security.Domain.DTO.RoleAction.RoleActionListItem>

@if (Model == null || Model.Count() == 0)
{
    <h4 class="text-danger text-center">
        No Area
    </h4>
}
else
{
<table class="table table-striped table-hover table-striped mt-2">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleActionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectActionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectControllerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasPermission)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                <tr id="tr_@item.RoleActionID">
            <td>
                @Html.DisplayFor(modelItem => item.RoleActionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectActionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectControllerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasPermission)
            </td>
            <td>
    <span class="btn btn-danger btnDelete" data-id="@item.RoleActionID" data-action='@Url.Action("RemoveRoleAction","RoleActionManegment")'
  data-action-BindGrid='@Url.Action("RoleActionListAction","RoleActionManegment")'
                      data-action-RefreshGrid='@Url.Action("RoleActionSearchBoxAction","RoleActionManegment")' data-Delete="Delete" >Delete</span>
            </td>
        </tr>
}
    </tbody>
</table>
}