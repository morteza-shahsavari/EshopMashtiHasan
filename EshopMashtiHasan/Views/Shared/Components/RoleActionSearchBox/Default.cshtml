@model Security.Domain.DTO.RoleAction.RoleActionSearchModel

<h4>RoleActionSearchModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Default" id="frmSearch">
       
            <div class="form-group">
                <label asp-for="RoleActionID" class="control-label"></label>
                <input asp-for="RoleActionID" class="form-control" data-action='@Url.Action("RoleActionList", "RoleActionManegment")' data-search="search" />
               
            </div>
            <div class="form-group">
                <label asp-for="RoleID" class="control-label"></label>
                <select asp-for="RoleID" asp-items=@ViewBag.drpRole class="form-control"
                data-action='@Url.Action("RoleActionList", "RoleActionManegment")' 
                data-search="search"></select>
               
            </div>
            <div class="form-group">
                <label asp-for="ProjectActionID" class="control-label"></label>
                <select asp-for="ProjectActionID" asp-items=@ViewBag.ProjectAction 
                class="form-control" data-action='@Url.Action("RoleActionList", "RoleActionManegment")'
                data-search="search"></select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
                <a href="#" class="btn btn-success mt-2" id="btnAddNew"
                   data-action='@Url.Action("AddNew","RoleActionManegment")'
                   data-container="dvContent" data-modal-id="exampleModal"
                   data-showAddModel="showAddModel">ثبت جدید</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
