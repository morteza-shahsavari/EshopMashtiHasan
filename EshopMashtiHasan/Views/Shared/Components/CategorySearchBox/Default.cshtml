@model Shopping.DomainModel.DTO.Category.CategorySearchModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" id="frmSearch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="ParentID" class="control-label"></label>
                <select asp-items="@ViewBag.drp" class="form-control" asp-for="ParentID"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="#" class="btn btn-success" id="btnAddNew" data-action='@Url.Action("AddNew","CategoryManegement")' data-container="dvContent" data-modal-id="exampleModal" >AddNew</a>
            </div>
        </form>
    </div>
</div>


